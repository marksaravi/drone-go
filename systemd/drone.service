[Unit]
Description=Drone
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/go/src/drone-go
ExecStart=/usr/local/go/bin/go run ./cmd/drone > /dev/null
Restart=no
StandardError=null
StandardOutput=null
SyslogIdentifier=drone_service
KillMode=process

[Install]
Alias=drone
WantedBy=multi-user.target