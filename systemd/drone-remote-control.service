[Unit]
Description=Remote Control
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/go/src/drone-go
ExecStart=/usr/local/go/bin/go run ./cmd/remote-control > /dev/null
Restart=no
StandardError=null
StandardOutput=null
SyslogIdentifier=drone_remote_control_service
KillMode=process

[Install]
Alias=drone-remote-control
WantedBy=multi-user.target